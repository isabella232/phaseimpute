process {
    resourceLimits = [cpus: 2, memory: '2.GB']

    withName: BCFTOOLS_MERGE {
        ext.args = ["--write-index=tbi", "--output-type z"].join(' ')
    }

    withName: BCFTOOLS_QUERY {
        ext.args = "--list-samples"
    }

    withName: BCFTOOLS_PLUGINSPLIT {
        ext.args = ["--write-index=tbi", "--output-type z"].join(' ')
    }
}
